<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:sessions, url: sessions_path) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit "Sign in", class: "btn btn-large btn-primary btn-fluid" %>
    <% end %>

    New user? <%= link_to "Sign up now!", signup_path %> <div style="float: right;"><%= link_to image_tag("facebook-login-button.png"), "/auth/facebook", style: "padding: 0;" %></div>
  </div>
</div>