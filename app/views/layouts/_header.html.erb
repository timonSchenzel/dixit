<header class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to "Dixit", root_path, id: "logo", class: "brand" %>
      <div class="nav-collapse collapse">
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Help", "#" %></li>
          <% if signed_in? %>
              <li><%= link_to "Users", users_path %></li>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Profile", current_user %></li>
                  <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Sign out", signout_path, method: "delete" %>
                  </li>
                </ul>
              </li>
          <% else %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Sign in <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li>
                    <div class="row">
                      <div class="span3" style="padding: 20px">
                        <%= form_for(:sessions, url: sessions_path) do |f| %>

                            <%= f.label :email %>
                            <%= f.text_field :email %>

                            <%= f.label :password %>
                            <%= f.password_field :password %>

                            <%= f.submit "Sign in", class: "btn btn-large btn-primary btn-fluid", style: "margin: 0;" %>
                        <% end %>

                        <%= link_to image_tag("facebook-login-button.png"), "/auth/facebook", style: "padding: 0;" %>

                        <p>New user? <%= link_to "Sign up now!", signup_path, style: "display: inline !important; padding: 0;" %></p>
                      </div>
                    </div>
                  </li>
                </ul>
              </li>
              <li><%= link_to image_tag("facebook-login-button.png", style: "height: 25px;"), "/auth/facebook" %></li>
          <% end %>
        </ul>
      </nav>
      </div>
    </div>
  </div>
</header>